{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A GitHub repository.",
  "type": "object",
  "required": [
    "$schema",
    "labels"
  ],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "The relative path to the schema file."
    },
    "labels": {
      "type": "object",
      "description": "Labels shared across all GitHub repositories.",
      "required": [
        "individual",
        "group"
      ],
      "properties": {
        "individual": {
          "type": "object",
          "description": "A label not in a group.",
          "patternProperties": {
            "^[a-zA-Z0-9 ]{1,}$": {
              "type": "object",
              "required": [
                "description",
                "colour"
              ],
              "properties": {
                "description": {
                  "$ref": "#/$defs/label/description"
                },
                "colour": {
                  "$ref": "#/$defs/label/colour"
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "group": {
          "type": "object",
          "description": "A group of labels.",
          "patternProperties": {
            "^[a-z0-9-]{1,}$": {
              "type": "object",
              "required": [
                "labels",
                "colour",
                "select",
                "required"
              ],
              "properties": {
                "labels": {
                  "type": "object",
                  "description": "Labels included in the group.",
                  "patternProperties": {
                    "^[a-zA-Z0-9: ]{1,}$": {
                      "type": "object",
                      "required": [
                        "description"
                      ],
                      "properties": {
                        "description": {
                          "$ref": "#/$defs/label/description"
                        }
                      },
                      "additionalProperties": false
                    }
                  },
                  "additionalProperties": false,
                  "minProperties": 1
                },
                "colour": {
                  "$ref": "#/$defs/label/colour"
                },
                "select": {
                  "type": "string",
                  "description": "Whether only one or multiple labels from the group may assigned at a time.",
                  "enum": [
                    "single",
                    "multi"
                  ]
                },
                "required": {
                  "type": "boolean",
                  "description": "Whether or not an issue requires this label.",
                  "default": false
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "$defs": {
    "label": {
      "colour": {
        "type": "string",
        "description": "The label's colour.",
        "pattern": "^#[a-z0-9]{6}$"
      },
      "description": {
        "type": "string",
        "description": "The label's description.",
        "minLength": 1
      }
    }
  }
}