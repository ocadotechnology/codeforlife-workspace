{
  "$schema": "./repository-schema.json",
  "labels": {
    "individual": {
      "bot ignore": {
        "description": "Instructs @cfl-bot to ignore this issue.",
        "colour": "#000000"
      },
      "good first issue": {
        "description": "A good issue to work on if it's your first.",
        "colour": "#0e8a16"
      },
      "ready for review": {
        "description": "This issue is ready to be reviewed by a CFL team member.",
        "colour": "#ff4d00"
      }
    },
    "group": {
      "type": {
        "labels": {
          "dev": {
            "description": "This issue involves development."
          },
          "sec": {
            "description": "This issue involves security."
          },
          "ui": {
            "description": "This issue involves user interface."
          },
          "ux": {
            "description": "This issue involves user experience."
          },
          "edu": {
            "description": "This issue involves educational resources."
          }
        },
        "colour": "#fbca04",
        "select": "single",
        "required": true
      },
      "subtype": {
        "labels": {
          "admin": {
            "description": "This issue involves administration."
          },
          "research": {
            "description": "This issue involves research."
          },
          "data": {
            "description": "This issue involves data."
          },
          "doc": {
            "description": "This issue involves documentation."
          },
          "bug": {
            "description": "This issue involves bug fixing."
          },
          "feature": {
            "description": "This issue involves creating a feature."
          }
        },
        "colour": "#c4883a",
        "select": "single",
        "required": false
      },
      "user": {
        "labels": {
          "teacher": {
            "description": "This issue impacts teacher users."
          },
          "student": {
            "description": "This issue impacts student users."
          },
          "indy": {
            "description": "This issue impacts independent users."
          }
        },
        "colour": "#800080",
        "select": "multi",
        "required": false
      },
      "size": {
        "labels": {
          "XS": {
            "description": "An extra small issue (approx. ~2hrs)."
          },
          "S": {
            "description": "A small issue (approx. ~4hrs)."
          },
          "M": {
            "description": "A medium issue (approx. ~8hrs)."
          },
          "L": {
            "description": "A large issue (approx. ~16hrs)."
          },
          "XL": {
            "description": "An extra large issue (approx. ~24hrs)."
          }
        },
        "colour": "#ff69b4",
        "select": "single",
        "required": true
      },
      "2025": {
        "labels": {
          "2025:service": {
            "description": "2025 Goal: Improve product service."
          },
          "2025:partnership": {
            "description": "2025 Goal: Increase resources through partnerships."
          },
          "2025:security": {
            "description": "2025 Goal: Improve app security."
          },
          "2025:tech debt": {
            "description": "2025 Goal: Reduce technical debt."
          }
        },
        "colour": "#ffffff",
        "select": "multi",
        "required": true
      },
      "blocked": {
        "labels": {
          "blocked": {
            "description": "This issue is blocked until another issue inside of Ocado is resolved."
          },
          "externally blocked": {
            "description": "This issue is blocked until another issue outside of Ocado is resolved."
          }
        },
        "colour": "#ff0000",
        "select": "single",
        "required": false
      }
    }
  }
}